{
  "compilerOptions": {
      "target": "ES6",                          
      "module": "NodeNext",                     
      "moduleResolution": "NodeNext",           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "strict": true,                           
      "noEmit": true,                           
      "resolveJsonModule": true,                
      "outDir": "./dist",                       
      "rootDir": "./src",                       
      "baseUrl": ".",                          
      "paths": {                                
          "*": ["node_modules/*"]
      }
  },
  "include": ["src/**/*", "utils"],
  "exclude": ["node_modules"]
}
